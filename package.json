{
    "private": true,
    "version": "0.1.1",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "prepare": "husky install",
        "start": "prisma migrate deploy && node .",
        "predev": "pnpm clean && prisma generate",
        "dev": "tsc-watch --onSuccess \"node .\"",
        "test": "pnpm build",
        "prebuild": "pnpm clean && prisma generate",
        "build": "tsc --build",
        "clean": "rimraf dist",
        "lint": "eslint --fix \"src/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "v:patch": "npm version patch -m \"chore(release): %s\" --sign-git-tag",
        "v:minor": "npm version minor -m \"chore(release): %s\" --sign-git-tag",
        "v:major": "npm version major -m \"chore(release): %s\" --sign-git-tag"
    },
    "dependencies": {
        "@prisma/client": "6.5.0",
        "discord.js": "^14.18.0",
        "dotenv": "^16.5.0",
        "is-plain-object": "^5.0.0",
        "ms": "^2.1.3",
        "mustache": "^4.2.0",
        "pretty-ms": "^9.2.0",
        "rate-limiter-flexible": "^7.0.0",
        "winston": "^3.17.0",
        "yaml": "^2.7.1",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
        "@types/express": "^5.0.1",
        "@types/ms": "^2.1.0",
        "@types/mustache": "^4.2.5",
        "@types/node": "^22.14.1",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "husky": "^9.1.7",
        "prettier": "^3.5.3",
        "prisma": "^6.6.0",
        "rimraf": "^6.0.1",
        "tsc-watch": "^6.2.1",
        "typescript": "^5.8.3"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types",
                    "wip"
                ]
            ],
            "scope-case": [
                1,
                "always",
                "pascal-case"
            ],
            "body-max-line-length": [
                2,
                "always",
                500
            ]
        }
    },
    "packageManager": "pnpm@10.5.0+sha512.11106a5916c7406fe4b8cb8e3067974b8728f47308a4f5ac5e850304afa6f57e2847d7950dfe78877d8d36bfb401d381c4215db3a4c3547ffa63c14333a6fa51",
    "pnpm": {
        "onlyBuiltDependencies": [
            "@prisma/client",
            "@prisma/engines",
            "esbuild",
            "prisma"
        ]
    }
}