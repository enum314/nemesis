{
    "private": true,
    "version": "0.1.1",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "start": "node .",
        "predev": "pnpm clean && prisma generate",
        "dev": "tsc-watch --onSuccess \"node .\"",
        "test": "pnpm build",
        "prebuild": "pnpm clean && prisma generate",
        "build": "tsc --build",
        "clean": "rimraf dist",
        "lint": "eslint --fix \"src/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "v:patch": "npm version patch -m \"chore(release): %s\" --sign-git-tag",
        "v:minor": "npm version minor -m \"chore(release): %s\" --sign-git-tag",
        "v:major": "npm version major -m \"chore(release): %s\" --sign-git-tag"
    },
    "dependencies": {
        "@prisma/client": "6.8.2",
        "discord.js": "^14.19.3",
        "dotenv": "^16.5.0",
        "is-plain-object": "^5.0.0",
        "ms": "^2.1.3",
        "mustache": "^4.2.0",
        "pretty-ms": "^9.2.0",
        "rate-limiter-flexible": "^7.1.0",
        "winston": "^3.17.0",
        "yaml": "^2.8.0",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
        "@types/express": "^5.0.2",
        "@types/ms": "^2.1.0",
        "@types/mustache": "^4.2.6",
        "@types/node": "^22.15.18",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "husky": "^9.1.7",
        "prettier": "^3.5.3",
        "prisma": "^6.8.2",
        "rimraf": "^6.0.1",
        "tsc-watch": "^6.2.1",
        "typescript": "^5.8.3"
    },
    "imports": {
        "#root/*": "./dist/*.js",
        "#classes/*": "./dist/classes/*.js",
        "#lib/*": "./dist/lib/*.js",
        "#utils/*": "./dist/utils/*.js",
        "#functions/*": "./dist/functions/*.js",
        "#events/*": "./dist/events/*.js",
        "#commands/*": "./dist/commands/*.js",
        "#configs/*": "./dist/configs/*.js",
        "#addons/*": "./dist/addons/*.js"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types",
                    "wip"
                ]
            ],
            "scope-case": [
                1,
                "always",
                "pascal-case"
            ],
            "body-max-line-length": [
                2,
                "always",
                500
            ]
        }
    },
    "packageManager": "pnpm@10.9.0",
    "pnpm": {
        "onlyBuiltDependencies": [
            "@prisma/client",
            "@prisma/engines",
            "esbuild",
            "prisma"
        ]
    }
}