{
    "private": true,
    "version": "0.1.0",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "prepare": "husky install",
        "start": "node .",
        "dev": "rimraf dist && tsc-watch --onSuccess \"node .\"",
        "test": "tsc --build",
        "prebuild": "pnpm clean",
        "build": "tsc --build",
        "clean": "rimraf dist",
        "lint": "eslint --fix \"src/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "v:patch": "npm version patch -m \"chore(release): %s\" --sign-git-tag",
        "v:minor": "npm version minor -m \"chore(release): %s\" --sign-git-tag",
        "v:major": "npm version major -m \"chore(release): %s\" --sign-git-tag"
    },
    "dependencies": {
        "@prisma/client": "6.1.0",
        "discord.js": "^14.16.3",
        "dotenv": "^16.4.5",
        "is-plain-object": "^5.0.0",
        "ms": "^2.1.3",
        "mustache": "^4.2.0",
        "pretty-ms": "^9.0.0",
        "rate-limiter-flexible": "^5.0.0",
        "semver": "^7.6.0",
        "semver-regex": "^4.0.5",
        "winston": "^3.12.0",
        "winston-daily-rotate-file": "^5.0.0",
        "yaml": "^2.4.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.2.0",
        "@commitlint/config-conventional": "^19.1.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.2.0",
        "@types/express": "^5.0.0",
        "@types/ms": "^0.7.34",
        "@types/mustache": "^4.2.5",
        "@types/node": "^22.0.0",
        "@types/semver": "^7.5.8",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^9.0.11",
        "prettier": "^3.2.5",
        "prisma": "^6.1.0",
        "rimraf": "^6.0.0",
        "tsc-watch": "^6.0.4",
        "typescript": "^5.4.2"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types",
                    "wip"
                ]
            ],
            "scope-case": [
                1,
                "always",
                "pascal-case"
            ]
        }
    },
    "packageManager": "pnpm@10.5.0+sha512.11106a5916c7406fe4b8cb8e3067974b8728f47308a4f5ac5e850304afa6f57e2847d7950dfe78877d8d36bfb401d381c4215db3a4c3547ffa63c14333a6fa51"
}