{
    "private": true,
    "version": "0.1.1",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "start": "node .",
        "predev": "pnpm clean && prisma generate",
        "dev": "tsc-watch --onSuccess \"node .\"",
        "test": "pnpm build",
        "prebuild": "pnpm clean && prisma generate",
        "build": "tsc --build",
        "clean": "rimraf dist",
        "lint": "eslint --fix \"src/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "v:patch": "npm version patch -m \"chore(release): %s\" --sign-git-tag",
        "v:minor": "npm version minor -m \"chore(release): %s\" --sign-git-tag",
        "v:major": "npm version major -m \"chore(release): %s\" --sign-git-tag"
    },
    "dependencies": {
        "@prisma/client": "6.16.2",
        "@t3-oss/env-core": "^0.13.8",
        "discord.js": "^14.22.1",
        "dotenv": "^16.6.1",
        "fast-equals": "^5.3.2",
        "ms": "^2.1.3",
        "mustache": "^4.2.0",
        "pretty-ms": "^9.3.0",
        "winston": "^3.17.0",
        "yaml": "^2.8.1",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@types/express": "^5.0.3",
        "@types/ms": "^2.1.0",
        "@types/mustache": "^4.2.6",
        "@types/node": "^22.18.6",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "prisma": "^6.16.2",
        "rimraf": "^6.0.1",
        "tsc-watch": "^6.3.1",
        "typescript": "^5.9.2"
    },
    "imports": {
        "#root/*": "./dist/*.js",
        "#classes/*": "./dist/classes/*.js",
        "#lib/*": "./dist/lib/*.js",
        "#utils/*": "./dist/utils/*.js",
        "#inhibitors/*": "./dist/inhibitors/*.js",
        "#events/*": "./dist/events/*.js",
        "#commands/*": "./dist/commands/*.js",
        "#configs/*": "./dist/configs/*.js",
        "#addons/*": "./dist/addons/*.js"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types",
                    "wip"
                ]
            ],
            "scope-case": [
                1,
                "always",
                "pascal-case"
            ],
            "body-max-line-length": [
                2,
                "always",
                500
            ]
        }
    },
    "packageManager": "pnpm@10.18.0+sha512.e804f889f1cecc40d572db084eec3e4881739f8dec69c0ff10d2d1beff9a4e309383ba27b5b750059d7f4c149535b6cd0d2cb1ed3aeb739239a4284a68f40cfa",
    "pnpm": {
        "onlyBuiltDependencies": [
            "@prisma/client",
            "@prisma/engines",
            "esbuild",
            "prisma"
        ]
    }
}