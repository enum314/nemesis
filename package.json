{
    "private": true,
    "version": "0.1.2",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "start": "node .",
        "predev": "pnpm clean && prisma generate",
        "dev": "tsc-watch --onSuccess \"node .\"",
        "test": "pnpm build",
        "prebuild": "pnpm clean && prisma generate",
        "build": "tsc --build",
        "clean": "rimraf dist",
        "lint": "eslint --fix \"src/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "v:patch": "npm version patch -m \"chore(release): %s\" --sign-git-tag",
        "v:minor": "npm version minor -m \"chore(release): %s\" --sign-git-tag",
        "v:major": "npm version major -m \"chore(release): %s\" --sign-git-tag"
    },
    "dependencies": {
        "@prisma/client": "6.17.0",
        "@t3-oss/env-core": "^0.13.8",
        "discord.js": "^14.22.1",
        "dotenv": "^17.2.3",
        "fast-equals": "^5.3.2",
        "ms": "^2.1.3",
        "mustache": "^4.2.0",
        "pretty-ms": "^9.3.0",
        "winston": "^3.18.3",
        "yaml": "^2.8.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@types/express": "^5.0.3",
        "@types/ms": "^2.1.0",
        "@types/mustache": "^4.2.6",
        "@types/node": "22",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "prisma": "^6.17.0",
        "rimraf": "^6.0.1",
        "tsc-watch": "^7.2.0",
        "typescript": "^5.9.3"
    },
    "imports": {
        "#root/*": "./dist/*.js",
        "#classes/*": "./dist/classes/*.js",
        "#lib/*": "./dist/lib/*.js",
        "#utils/*": "./dist/utils/*.js",
        "#middlewares/*": "./dist/middlewares/*.js",
        "#events/*": "./dist/events/*.js",
        "#commands/*": "./dist/commands/*.js",
        "#configs/*": "./dist/configs/*.js",
        "#addons/*": "./dist/addons/*.js"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types",
                    "wip"
                ]
            ],
            "scope-case": [
                1,
                "always",
                "pascal-case"
            ],
            "body-max-line-length": [
                2,
                "always",
                500
            ]
        }
    },
    "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
    "pnpm": {
        "onlyBuiltDependencies": [
            "@prisma/client",
            "@prisma/engines",
            "esbuild",
            "prisma"
        ]
    }
}
